{
    "name": "movie-native-app-api",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "bun run --watch server.ts",
        "dev:init": "bun run db:init && bun run --watch server.ts",
        "start": "bun run dist/server.js",
        "build": "bun run db:init && bun build server.ts --outdir dist --target bun --minify ",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write .",
        "db:init": "bun run scripts/db/init.ts",
        "db:reset": "bun run scripts/db/reset.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.24.0",
        "@types/bun": "latest",
        "@types/express": "^4.17.21",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.6",
        "prettier": "^3.5.3"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^5.1.0"
    }
}
